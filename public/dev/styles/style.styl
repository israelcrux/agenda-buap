/****************************	MODAL   ****************************/

.ar-modal-background
	position fixed
	top 0px
	left 0px
	width 100%
	height 100%
	background-color modal_background
	opacity 0.9
	z-index 10
.ar-modal-wrapper
	position absolute
	top 0px
	left 0px
	width 100%
	z-index 11

.ar-modal-container
	background-color bgc
	padding 15px
	margin 50px auto
	max-width 900px
	position relative

.ar-modal-closebtn
	position absolute
	top 0px
	right 0px
	cursor pointer
	standard-background()
	background-image url(../img/arrows_remove.svg)

.ar-modal-title
	position absolute
	width 100%
	line-height 50px
	top 0px
	left 0px
	background-color #00b2e2
	color #fff
	text-indent 15px
	font-size 1.2em
	
.ar-modal-title,
.ar-modal-closebtn
	height 50px

.ar-modal-title
	background-color light_blue
.ar-modal-closebtn
	width 50px
	background-color deep_blue

.ar-modal-content
	padding-top 35px
	.ar-form-container
		max-width 100%

/****************************	ALERT   ****************************/
.ar-alert.in
	top 0px
	
.ar-alert,
.ar-alert.out
	background-color #fd7a0b
	color #fff
	width 600px
	margin 0 auto
	padding 15px
	top -500px
	z-index 5
	position absolute
	left 50%
	margin-left -300px
	-webkit-transition top .5s ease
	-moz-transition top .5s ease
	-ms-transition top .5s ease
	-o-transition top .5s ease
	transition top .5s ease

